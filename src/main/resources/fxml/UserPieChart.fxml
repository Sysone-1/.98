<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sysone.ogamza.controller.UserPieChartController"
      spacing="30"
      alignment="CENTER">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- 근무 현황 차트 -->
    <VBox spacing="10" alignment="CENTER"
          style="-fx-background-color: #FFFFFF; -fx-border-color: #E5E5E5; -fx-border-width: 1; -fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 20; -fx-pref-width: 300;">

        <Label text="근무 현황"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <StackPane style="-fx-pref-width: 200; -fx-pref-height: 200;">
            <!-- 파이 차트 -->
            <PieChart fx:id="workStatusChart"
                      prefWidth="200" prefHeight="200"
                      legendVisible="false"
                      labelsVisible="false"/>

            <!-- 중앙 퍼센트 표시 -->
            <VBox alignment="CENTER" spacing="0">
                <Label fx:id="workStatusPercent" text="75%"
                       style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #A855F7;"/>
            </VBox>
        </StackPane>

        <!-- 범례 -->
        <VBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Circle radius="6" fill="#A855F7"/>
                <Label text="출근인원" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
            </HBox>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Circle radius="6" fill="#F59E0B"/>
                <Label text="지각" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
            </HBox>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Circle radius="6" fill="#EF4444"/>
                <Label text="미출근" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
            </HBox>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Circle radius="6" fill="#10B981"/>
                <Label text="휴가" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- 부서별 근무 현황 차트 -->
    <VBox spacing="10" alignment="CENTER"
          style="-fx-background-color: #FFFFFF; -fx-border-color: #E5E5E5; -fx-border-width: 1; -fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 20; -fx-pref-width: 300;">

        <Label text="부서별 근무 현황"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <StackPane style="-fx-pref-width: 200; -fx-pref-height: 200;">
            <!-- 파이 차트 -->
            <PieChart fx:id="departmentChart"
                      prefWidth="200" prefHeight="200"
                      legendVisible="false"
                      labelsVisible="false"/>

            <!-- 중앙 퍼센트 표시 -->
            <VBox alignment="CENTER" spacing="0">
                <Label fx:id="departmentPercent" text="30%"
                       style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #A855F7;"/>
            </VBox>
        </StackPane>

        <!-- 범례 -->
        <VBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Circle radius="6" fill="#A855F7"/>
                <Label text="인사팀" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
            </HBox>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Circle radius="6" fill="#3B82F6"/>
                <Label text="경영팀" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
            </HBox>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Circle radius="6" fill="#10B981"/>
                <Label text="마케팅" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
            </HBox>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <Circle radius="6" fill="#F59E0B"/>
                <Label text="재무부" style="-fx-font-size: 14px; -fx-text-fill: #666666;"/>
            </HBox>
        </VBox>
    </VBox>
</HBox>
