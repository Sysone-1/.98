<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #F1F9FF;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sysone.ogamza.controller.admin.EmployeeRegistController">

    <children>
        <!-- 상단 제목 -->
        <Label layoutX="30.0" layoutY="30.0" text="사원 등록" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- 입력 폼 -->
        <VBox layoutX="30.0" layoutY="80.0" spacing="20.0" prefWidth="540.0"
              style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">

            <children>
                <!-- 사번 -->
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="사번:" prefWidth="100.0" />
                        <TextField fx:id="employeeIdField" promptText="사번 입력" prefWidth="300.0" />
                    </children>
                </HBox>

                <!-- 이름 -->
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="이름:" prefWidth="100.0" />
                        <TextField fx:id="employeeNameField" promptText="이름 입력" prefWidth="300.0" />
                    </children>
                </HBox>

                <!-- 부서 -->
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="부서:" prefWidth="100.0" />
                        <ComboBox fx:id="departmentComboBox" promptText="부서 선택" prefWidth="300.0" />
                    </children>
                </HBox>

                <!-- 직급 -->
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="직급:" prefWidth="100.0" />
                        <ComboBox fx:id="positionComboBox" promptText="직급 선택" prefWidth="300.0" />
                    </children>
                </HBox>

                <!-- 이메일 -->
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="이메일:" prefWidth="100.0" />
                        <TextField fx:id="emailField" promptText="이메일 입력" prefWidth="300.0" />
                    </children>
                </HBox>

                <!-- 전화번호 -->
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="전화번호:" prefWidth="100.0" />
                        <TextField fx:id="telField" promptText="전화번호 입력" prefWidth="300.0" />
                    </children>
                </HBox>

                <!-- NFC 카드 UID -->
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <children>
                        <Label text="NFC 카드:" prefWidth="100.0" />
                        <TextField fx:id="nfcUidField" promptText="NFC 카드 UID (선택사항)" prefWidth="300.0" />
                    </children>
                </HBox>

                <!-- 버튼 영역 -->
                <HBox spacing="15.0" alignment="CENTER" prefWidth="540.0">
                    <children>
                        <Button fx:id="saveButton" onAction="#handleSave" text="등록"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white;"
                                prefWidth="100.0" />
                        <Button fx:id="cancelButton" onAction="#handleCancel" text="취소"
                                style="-fx-background-color: #7f8c8d; -fx-text-fill: white;"
                                prefWidth="100.0" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
