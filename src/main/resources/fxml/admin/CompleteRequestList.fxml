<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #F1F9FF;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sysone.ogamza.controller.admin.CompletedRequestListController">
    <children>
        <!-- 제목 -->
        <Label layoutX="30.0" layoutY="20.0" text="결재 완료 내역">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>

        <!-- 테이블 -->
        <TableView fx:id="completedTable" layoutX="30.0" layoutY="60.0" prefHeight="450.0" prefWidth="840.0">
            <columns>
                <TableColumn fx:id="employeeIdColumn" prefWidth="80.0" text="사원번호"/>
                <TableColumn fx:id="employeeNameColumn" prefWidth="100.0" text="이름"/>
                <TableColumn fx:id="departmentColumn" prefWidth="100.0" text="부서"/>
                <TableColumn fx:id="positionColumn" prefWidth="80.0" text="직급"/>
                <TableColumn fx:id="requestTypeColumn" prefWidth="100.0" text="종류"/>
                <TableColumn fx:id="startDateColumn" prefWidth="100.0" text="시작일"/>
                <TableColumn fx:id="endDateColumn" prefWidth="100.0" text="종료일"/>
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="결재 상태"/>
                <TableColumn fx:id="colReason" prefWidth="100.0" text="사유"/>
            </columns>
        </TableView>

        <!-- 버튼 영역 -->
        <HBox layoutX="30.0" layoutY="540.0" spacing="10.0">
            <children>
                <Button fx:id="refreshButton" onAction="#handleRefresh" prefWidth="100.0"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="새로고침"/>
                <Button fx:id="closeButton" onAction="#handleClose" prefWidth="100.0"
                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white;" text="닫기"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
