                                <VBox prefHeight="100.0" prefWidth="130.0" style="-fx-alignment: center;-fx-cursor:hand; -fx-spacing: 10;" styleClass="sidebar-items">
                                    <children>
                                        <ImageView fitHeight="40.0" fitWidth="40.0" onMouseClicked="#goRecord" pickOnBounds="true" preserveRatio="true">
                                            <image><Image url="@../../images/record.png" /></image>
                                        </ImageView>
