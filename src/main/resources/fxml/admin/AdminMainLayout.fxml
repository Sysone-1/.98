                                    <children>
                                        <ImageView fitHeight="40.0" fitWidth="40.0" onMouseClicked="#logout" pickOnBounds="true" preserveRatio="true">
                                            <image><Image url="@../../images/logout.png" /></image>
                                        </ImageView>
                                    </children>
