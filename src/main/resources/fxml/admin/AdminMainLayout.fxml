                        <VBox prefWidth="1110.0">
                            <!-- 헤더 -->
                            <VBox prefHeight="90.0" prefWidth="1110.0" style="-fx-background-color: #ffffff;-fx-background-radius: 0 30 0 0; ">
                                <HBox prefHeight="100.0" prefWidth="1151.0">
                                    <children>
                                        <VBox prefHeight="85.0" prefWidth="229.0" style="-fx-alignment: center; -fx-padding: 20;">
                                            <children>
                                                <ImageView fitHeight="150.0" fitWidth="180.0" onMouseClicked="#goHome" pickOnBounds="true" preserveRatio="true">
                                                    <image><Image url="@../../images/adminLogo.png" /></image>
                                                </ImageView>
                                            </children>
                                        </VBox>
                                        <Region fx:id="spacer" prefHeight="100.0" prefWidth="600.0" HBox.hgrow="ALWAYS" />
