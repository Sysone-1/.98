<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="500.0"
            style="-fx-background-color: white; -fx-background-radius: 20;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sysone.ogamza.controller.user.NFCRegisterController">
    <children>
        <VBox spacing="20" style="-fx-padding: 20 40 20 40;">
            <!-- 제목 -->
            <Label text="사원 등록" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <!-- 입력 필드 영역 -->
            <GridPane hgap="10" vgap="12">
                <columnConstraints>
                    <ColumnConstraints prefWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- 이름 -->
                <Label text="이름" style="-fx-font-size: 16px;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="이름 입력"
                           style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;"
                           prefHeight="30" prefWidth="300"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- 부서 -->
                <Label text="부서" style="-fx-font-size: 16px;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="departmentComboBox" promptText="부서를 선택하세요"
                          style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;"
                          prefHeight="30" prefWidth="300"
                          GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- 전화번호 -->
                <Label text="전화번호" style="-fx-font-size: 16px;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="telField" promptText="010-1234-5678"
                           style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;"
                           prefHeight="30" prefWidth="300"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- 직위 -->
                <Label text="직위" style="-fx-font-size: 16px;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="positionComboBox" promptText="직위를 선택하세요"
                          style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;"
                          prefHeight="30" prefWidth="300"
                          GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- 이메일 -->
                <Label text="이메일" style="-fx-font-size: 16px;" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" promptText="example@domain.com"
                           style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;"
                           prefHeight="30" prefWidth="300"
                           GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- 연차 -->
                <Label text="기본 연차" style="-fx-font-size: 16px;" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="vacNumField" promptText="기본 연차 수 입력"
                           style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;"
                           prefHeight="30" prefWidth="300"
                           GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <!-- 프로필 사진 라벨 + 버튼 -->
                <Label text="프로필 사진" style="-fx-font-size: 16px;" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <HBox alignment="CENTER_LEFT" spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
                    <children>
                        <Button fx:id="imageSelectButton" onAction="#handleImageBrowseClick" text="이미지 선택"
                                style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;" prefHeight="30"/>
                        <TextField fx:id="picField" managed="false" visible="false"/>
                    </children>
                </HBox>

                <!-- 프로필 이미지 (다음 줄) -->
                <Label text="" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <ImageView fx:id="profileImageView"
                           fitWidth="160" fitHeight="124" preserveRatio="true"
                           GridPane.rowIndex="7" GridPane.columnIndex="1"
                           style="-fx-border-color: lightgray;" />
            </GridPane>

            <!-- 등록 버튼 -->
            <HBox alignment="CENTER">
                <Button onAction="#registerEmployee" text="사원 등록"
                        style="-fx-background-color: #83ACFF; -fx-text-fill: white; -fx-background-radius: 10;
                               -fx-font-size: 16px; -fx-pref-height: 36px; -fx-pref-width: 100px;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
