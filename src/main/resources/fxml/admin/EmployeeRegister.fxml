                                <Label text="이름">
                                    <font>
                                        <Font size="16.0" />
                                    </font></Label>
                            </children>
                        </VBox>
                        <TextField fx:id="nameField" prefHeight="22.0" prefWidth="137.0" style="-fx-max-width: 300;" />
                    </children>
                </VBox>
                <VBox prefHeight="27.0" prefWidth="437.0" style="-fx-spacing: 10;">
                    <children>
                        <VBox maxHeight="98.0" prefHeight="50.0" prefWidth="70.0" style="-fx-background-radius: 30; -fx-alignment: center-left; -fx-max-width: 80; -fx-min-height: 20; -fx-max-height: 20;">
