                                <Label text="부서">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <ComboBox fx:id="departmentComboBox" prefHeight="0.0" prefWidth="300.0" style="-fx-max-width: 300;" />
                    </children>
                </VBox>
                <VBox prefHeight="22.0" prefWidth="437.0" style="-fx-spacing: 10;">
                    <children>
                        <VBox maxHeight="98.0" prefHeight="29.0" prefWidth="70.0" style="-fx-background-radius: 30; -fx-alignment: center-left; -fx-max-width: 500; -fx-min-height: 20; -fx-max-height: 20;">
