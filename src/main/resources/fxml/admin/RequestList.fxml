<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F1F9FF;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sysone.ogamza.controller.admin.RequestListController">
    <children>
        <!-- 제목 -->
        <Label fx:id="titleLabel" layoutX="30.0" layoutY="20.0" text="요청 승인 관리">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>

        <!-- 테이블 -->
        <TableView fx:id="requestTable" layoutX="30.0" layoutY="60.0" prefHeight="450.0" prefWidth="740.0">
            <columns>
                <TableColumn fx:id="employeeIdColumn" prefWidth="80.0" text="사원번호"/>
                <TableColumn fx:id="employeeNameColumn" prefWidth="100.0" text="이름"/>
                <TableColumn fx:id="departmentColumn" prefWidth="100.0" text="부서"/>
                <TableColumn fx:id="positionColumn" prefWidth="80.0" text="직급"/>
                <TableColumn fx:id="scheduleType" prefWidth="80.0" text="종류"/>
                <TableColumn fx:id="startDateColumn" prefWidth="100.0" text="시작일"/>
                <TableColumn fx:id="endDateColumn" prefWidth="100.0" text="종료일"/>
                <TableColumn fx:id="statusColumn" prefWidth="80.0" text="상태"/>
                <TableColumn fx:id="colReason" prefWidth="100.0" text="사유"/>
            </columns>
        </TableView>

        <!-- 버튼 영역 -->
        <HBox layoutX="30.0" layoutY="540.0" spacing="10.0">
            <children>
                <Button fx:id="approveButton" onAction="#handleApprove" prefWidth="100.0"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="승인"/>
                <Button fx:id="rejectButton" onAction="#handleReject" prefWidth="100.0"
                        style="-fx-background-color: #F44336; -fx-text-fill: white;" text="거절"/>
                <Button fx:id="closeButton" onAction="#handleClose" prefWidth="100.0"
                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white;" text="닫기"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
