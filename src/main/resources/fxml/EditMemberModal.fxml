<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.sysone.ogamza.controller.EditMemberModalController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: white; -fx-background-radius:20;">

    <!-- VBox로 전체 내용을 새로 배치 -->
    <VBox alignment="CENTER_LEFT" spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="30">
        <!-- 제목-->
        <Label text = "회원 정보 수정" style="-fx-font-size: 20px; -fx-font-weight:bold;" />

        <!-- 입력 필드 이름 그룹 -->
        <GridPane hgap="20" vgap="15">
            <columnConstraints>
                <!-- 라벨 영역 너비 고정 -->
                <ColumnConstraints prefWidth="120"/>
                <!-- 입력 영역 너비 자동 -->
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="27"/>
            </rowConstraints>

            <!-- 이름 -->
            <Label text="이름" GridPane.rowIndex="0" GridPane.columnIndex="0"
            style="-fx-font-size: 16px"/>
            <Label fx:id="nameLabel" text="김선호" GridPane.rowIndex = "0" GridPane.columnIndex="1"
            style="-fx-font-size: 16px"/>

            <!-- 나이 -->
            <Label text="나이" GridPane.rowIndex="1" GridPane.columnIndex="0"
            style="-fx-font-size: 16px"/>
            <Label fx:id="ageLabel" text="30세" GridPane.rowIndex = "1" GridPane.columnIndex="1"
            style="-fx-font-size: 16px"/>

            <!-- 비밀번호 -->
            <Label text="비밀번호" GridPane.rowIndex="2" GridPane.columnIndex="0"
            style="-fx-font-size: 16px"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex = "2" GridPane.columnIndex="1" prefHeight="27"
            style="-fx-background-color: #F1F9FF; -fx-background-radius: 10;"/>

            <!-- 비밀번호 확인-->
            <Label text="비밀번호 확인" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-font-size: 16px;"
                   />
            <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex = "3" GridPane.columnIndex="1" prefHeight="27"
                   style="-fx-background-color: #F1F9FF; -fx-background-radius: 10;" />

            <!-- 연락처 라벨 -->
            <Label text="연락처" GridPane.rowIndex="4" GridPane.columnIndex="0"
                   style="-fx-font-size: 16px"/>

            <!-- 연락처 입력 영역 -->
            <GridPane GridPane.rowIndex="4" GridPane.columnIndex="1" hgap="5" vgap="0">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/> <!-- 010 -->
                    <ColumnConstraints prefWidth="10"/> <!-- 하이픈 -->
                    <ColumnConstraints hgrow="ALWAYS"/> <!-- 가운데 번호 -->
                    <ColumnConstraints prefWidth="10"/> <!-- 하이픈 -->
                    <ColumnConstraints hgrow="ALWAYS"/> <!-- 뒷번호 -->
                </columnConstraints>

                <!-- 010 고정 라벨 -->
                <Label text="010"
                       GridPane.columnIndex="0"
                       style="-fx-background-color: #F1F9FF;
                  -fx-alignment: center;
                  -fx-padding: 5 10;
                  -fx-border-color: #F1F9FF;
                  -fx-border-radius: 10;
                  -fx-background-radius: 10;"/>

                <!-- 하이픈 -->
                <Label text="-" GridPane.columnIndex="1"
                       style="-fx-font-size: 18px; -fx-alignment: center;"/>

                <!-- 가운데 번호 입력 -->
                <TextField fx:id="phonePart2"
                           GridPane.columnIndex="2"
                           promptText="1234"
                           prefHeight="27"
                           style="-fx-background-color: #F1F9FF;
                      -fx-background-radius: 10;"/>

                <!-- 하이픈 -->
                <Label text="-" GridPane.columnIndex="3"
                       style="-fx-font-size: 18px; -fx-alignment: center;"/>

                <!-- 뒷번호 입력 -->
                <TextField fx:id="phonePart3"
                           GridPane.columnIndex="4"
                           promptText="5678"
                           prefHeight="27"
                           style="-fx-background-color: #F1F9FF;
                      -fx-background-radius: 10;"/>
            </GridPane>

        </GridPane>

        <!-- 버튼 영역 -->
        <HBox alignment="CENTER" spacing="10">
            <Button text="취소" fx:id="cancelButton"
                    style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-background-radius: 8
                    -fx-pref-height:27px; -fx-pref-width: 60px; -fx-font-size:16px"
                    onAction="#handleCancel"/>
            <Button text="저장" fx:id="saveButton"
                    style="-fx-background-color: #009DFF; -fx-text-fill: white; -fx-background-radius: 8
                    -fx-pref-height:27px; -fx-pref-width: 60px; -fx-font-size:16px"
                    onAction="#handleSave"/>
        </HBox>
    </VBox>
</AnchorPane>
