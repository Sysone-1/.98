<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<AnchorPane prefHeight="600" prefWidth="400" style="-fx-background-color: white;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.sysone.ogamza.controller.user.MessageInBoxController">
    <children>

        <!-- 상단 헤더 -->
        <HBox alignment="CENTER_LEFT" minHeight="-Infinity" prefHeight="60" prefWidth="400.0" spacing="100.0" style="-fx-padding: 10;">
            <Pane HBox.hgrow="ALWAYS" />
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="쪽지보관함" />
         <ImageView fitHeight="60.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../images/writing.gif" />
            </image>
         </ImageView>
        </HBox>

        <!-- 탭 메뉴 -->
        <HBox layoutY="60" maxHeight="1.7976931348623157E308" prefHeight="40.0" prefWidth="400.0" spacing="0">
            <ToggleButton fx:id="receivedTab" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="200.0" selected="true" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #2196F3; -fx-text-fill: white;" text="받은 쪽지" HBox.hgrow="ALWAYS" />
            <ToggleButton fx:id="sentTab" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0" prefWidth="200.0" style="-fx-font-size: 14px; -fx-background-color: #E0E0E0; -fx-text-fill: black;" text="보낸 쪽지" HBox.hgrow="ALWAYS" />
        </HBox>

        <!-- 쪽지 리스트 -->
        <ListView fx:id="messageListView" layoutY="100" prefHeight="500" prefWidth="400" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0" />

    </children>
</AnchorPane>
