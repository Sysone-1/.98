   <children>

      <!-- 사용자 환영 인사 라벨 -->
      <HBox layoutX="26.0" layoutY="14.0" prefHeight="43.0" prefWidth="200.0" styleClass="helloMentBox">
         <children>
            <Label fx:id="welcomeLabel" text="안녕하세요 :)" textFill="#0099ff">
               <font>
                  <Font name="System Bold Italic" size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>

      <!-- 사용자 프로필 카드 -->
      <VBox id="employeeBox" layoutX="26.0" layoutY="63.0" prefHeight="311.0" prefWidth="335.0"
            style="-fx-background-color: #ffffff; -fx-background-radius: 20;">
         <effect>
            <DropShadow color="rgba(0, 0, 0, 0.25)" offsetX="4" offsetY="6" radius="12" />
         </effect>
         <children>
            <!-- 상단 이미지 영역 -->
            <VBox alignment="CENTER" prefHeight="210.0" prefWidth="296.0"
                  style="-fx-background-color: #D6E1F1; -fx-background-radius: 20 20 0 0;">
               <children>
                  <ImageView fx:id="employeeProfile" fitHeight="209.0" fitWidth="249.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/employee.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <!-- 이름 및 부서 -->
            <VBox prefHeight="101.0" prefWidth="259.0" style="-fx-padding: 20; -fx-spacing: 5;">
               <children>
                  <Text fx:id="employeeName" style="-fx-font-size: 26; -fx-font-weight: 700;" text="김선호" />
                  <Text fx:id="departmentName" style="-fx-font-size: 18;" text="개발 1팀" />
               </children>
            </VBox>
         </children>
      </VBox>

      <!-- 달력 컴포넌트가 들어갈 컨테이너 (동적으로 삽입됨) -->
      <AnchorPane fx:id="calendarContainer" layoutX="422.0" layoutY="115.0">
         <children>
            <VBox layoutX="1.0" prefHeight="230.0" prefWidth="247.0"
                  style="-fx-background-color: #ffffff; -fx-background-radius: 20;">
               <effect>
                  <DropShadow color="rgba(0, 0, 0, 0.25)" offsetX="4" offsetY="6" radius="12" />
               </effect>
            </VBox>
         </children>
      </AnchorPane>

      <!-- 근태 랭킹 타이틀 -->
      <HBox alignment="CENTER_LEFT" layoutX="710.0" layoutY="49.0" prefHeight="43.0" prefWidth="200.0" style="-fx-spacing: 10;">
         <children>
            <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/cup.gif" />
               </image>
            </ImageView>
            <Text style="-fx-font-size: 26;" text="근태 랭킹" />
         </children>
      </HBox>

      <!-- 근태 랭킹 박스 1~3위 -->
