      <!-- 오늘의 감정 선택 -->
      <VBox fx:id="todayMood" layoutX="27.0" layoutY="389.0" prefHeight="52.0" prefWidth="329.0"
            style="-fx-background-color: #ffffff; -fx-background-radius: 20;">
         <effect>
            <DropShadow color="rgba(0, 0, 0, 0.25)" offsetX="4" offsetY="6" radius="12" />
         </effect>
         <children>
            <HBox fx:id="moodBox" prefHeight="52.0" prefWidth="301.0"
                  style="-fx-padding: 8; -fx-spacing: 130; -fx-alignment: center;">
               <children>
                  <Text style="-fx-font-size: 18;" text="Pick Mood" />
                  <ImageView fx:id="emojiView" fitHeight="35" fitWidth="35" style="-fx-cursor: hand;" />
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- 오늘의 행운 정보 (컬러 + 숫자) -->
      <VBox id="LuckyContainer" layoutX="26.0" layoutY="461.0" prefHeight="160.0" prefWidth="335.0"
            style="-fx-background-color: #ffffff; -fx-background-radius: 20; -fx-spacing: 10; -fx-alignment: center;">
         <effect>
            <DropShadow color="rgba(0, 0, 0, 0.25)" offsetX="4" offsetY="6" radius="12" />
         </effect>
         <children>
            <VBox id="luckyColorBox" prefHeight="70.0" prefWidth="337.0" style="-fx-alignment: center;">
