            style="-fx-background-radius: 20; -fx-spacing: 15;">
         <children>

            <!-- 1위 -->
            <VBox style="-fx-pref-height: 67; -fx-pref-width: 302; -fx-background-color: #C9D4E4; -fx-background-radius: 20;">
               <effect>
                  <DropShadow color="rgba(0, 0, 0, 0.25)" offsetX="4" offsetY="6" radius="12" />
               </effect>
               <children>
                  <HBox style="-fx-alignment: center;">
                     <children>
                        <StackPane alignment="CENTER_LEFT" prefHeight="65.0" prefWidth="66.0">
                           <children>
                              <Text fx:id="rankingNum1" fill="WHITE" style="-fx-font-size: 35; -fx-font-weight: 700;" text="3" />
                           </children>
                        </StackPane>
                        <StackPane prefHeight="150.0" prefWidth="240.0">
                           <children>
                              <Text fx:id="rankingDept1" style="-fx-font-size: 26; -fx-font-weight: bold;" text="인사팀" />
