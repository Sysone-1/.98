<?xml version="1.0" encoding="UTF-8"?>

<!--
    ===========================================
    회원 정보 수정 모달 화면 (EditMemberModal.fxml)
    ===========================================
    - 로그인한 사용자의 이름, 직급, 비밀번호, 연락처를 수정할 수 있는 화면
    - 컨트롤러: EditMemberModalController
    - 구성요소:
      - 이름, 직급: 읽기 전용
      - 비밀번호: 새 비밀번호와 확인 필드
      - 연락처: 010-XXXX-XXXX 형식 입력
      - 유효성 검증 오류 메시지 출력 포함
      - 저장 버튼 클릭 시 입력값 저장 처리

    작성자: 구희원
    작성일: 2025-07-27
    ===========================================
-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: white; -fx-background-radius:20;"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sysone.ogamza.controller.user.EditMemberModalController">

    <children>
        <!-- 전체 레이아웃: VBox 사용 -->
        <VBox alignment="CENTER_LEFT" spacing="20"
              AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="30" AnchorPane.topAnchor="20">

            <children>
                <!-- 제목 -->
                <Label style="-fx-font-size: 20px; -fx-font-weight:bold;" text="회원 정보 수정" />

                <!-- 입력 필드 영역 (GridPane) -->
                <GridPane hgap="15" vgap="10">
                    <!-- 컬럼 비율 설정 -->
                    <columnConstraints>
                        <ColumnConstraints prefWidth="120" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    <!-- 행 간격 설정 -->
                    <rowConstraints>
                        <RowConstraints prefHeight="27.0" />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>

                    <children>
                        <!-- 이름 (수정 불가) -->
                        <Label style="-fx-font-size: 16px" text="이름" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="nameLabel" style="-fx-font-size: 16px" text="김선호" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <!-- 직책 (수정 불가) -->
                        <Label style="-fx-font-size: 16px" text="직급" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="positionLabel" style="-fx-font-size: 16px" text="사원" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <!-- 비밀번호 입력 -->
                        <Label style="-fx-font-size: 16px" text="비밀번호" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <PasswordField fx:id="passwordField" prefHeight="27"
                                       style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <!-- 비밀번호 확인 -->
                        <Label style="-fx-font-size: 16px;" text="비밀번호 확인" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <PasswordField fx:id="confirmPasswordField" prefHeight="27"
                                       style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <!-- 비밀번호 오류 메시지 -->
                        <Label fx:id="pwErrorLabel" managed="false"
                               style="-fx-font-size:12px;" textFill="red" visible="false"
                               GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <!-- 연락처 라벨 -->
                        <Label style="-fx-font-size: 16px" text="연락처" GridPane.columnIndex="0" GridPane.rowIndex="5" />

                        <!-- 연락처 입력 필드 -->
                        <GridPane hgap="5" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" />
                                <ColumnConstraints prefWidth="10" />
                                <ColumnConstraints hgrow="ALWAYS" />
                                <ColumnConstraints prefWidth="10" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                            </rowConstraints>
                            <children>
                                <!-- "010" 고정 -->
                                <Label text="010"
                                       style="-fx-font-size: 14px; -fx-background-color: #DDE9FA; -fx-background-radius: 8;
                                              -fx-border-color: #DDE9FA; -fx-border-radius: 8; -fx-alignment: center;
                                              -fx-padding: 5 10; -fx-pref-width: 50; -fx-pref-height: 27;"
                                       GridPane.columnIndex="0" />

                                <!-- "-" 하이픈 -->
                                <Label text="-" style="-fx-font-size: 18px; -fx-alignment: center;" GridPane.columnIndex="1" />

                                <!-- 가운데 번호 -->
                                <TextField fx:id="phonePart2" prefHeight="27" promptText="1234"
                                           style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;"
                                           GridPane.columnIndex="2" />

                                <!-- "-" 하이픈 -->
                                <Label text="-" style="-fx-font-size: 18px; -fx-alignment: center;" GridPane.columnIndex="3" />

                                <!-- 뒷자리 번호 -->
                                <TextField fx:id="phonePart3" prefHeight="27" promptText="5678"
                                           style="-fx-background-color: #DDE9FA; -fx-background-radius: 10;"
                                           GridPane.columnIndex="4" />
                            </children>
                        </GridPane>

                        <!-- 연락처 오류 메시지 -->
                        <Label fx:id="telErrorLabel" style="-fx-font-size: 12px;" textFill="red" visible="false"
                               GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    </children>
                </GridPane>

                <!-- 저장 버튼 영역 -->
                <HBox alignment="CENTER" prefHeight="54.0" prefWidth="550.0" spacing="10">
                    <children>
                        <Button fx:id="saveButton" onAction="#handleSave"
                                text="저장"
                                style="-fx-background-color: #009DFF; -fx-text-fill: white;
                                       -fx-background-radius: 8; -fx-pref-height:27px; -fx-pref-width: 60px;
                                       -fx-font-size:16px" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
