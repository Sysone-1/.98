<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300" prefWidth="420" style="-fx-background-color: #E3F2FD; -fx-padding: 14;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.sysone.ogamza.controller.user.MessageDetailController">

    <VBox spacing="12.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- 상단 타이틀 -->
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" text="📨 쪽지 상세" />

        <!-- 보낸 사람 -->
        <HBox spacing="10">
            <Label style="-fx-font-weight: bold;" text="보낸 사람:" />
            <Label fx:id="senderNameLabel" text="홍길동 대리" />
        </HBox>

        <!-- 보낸 날짜 -->
        <HBox spacing="10">
            <Label style="-fx-font-weight: bold;" text="보낸 날짜:" />
            <Label fx:id="sendDateLabel" text="2025-07-23 10:12" />
        </HBox>

        <!-- 내용 -->
        <Label style="-fx-font-weight: bold;" text="내용:" />
        <TextArea fx:id="contentArea" editable="false" prefRowCount="8" style="-fx-control-inner-background: #ffffff;" wrapText="true" />

        <!-- 버튼 영역 -->
        <HBox alignment="CENTER_RIGHT">
            <Button fx:id="closeButton" onAction="#handleClose" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" text="닫기" />
        </HBox>

    </VBox>
</AnchorPane>
