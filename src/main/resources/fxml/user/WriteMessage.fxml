<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="360" prefWidth="420"
            style="-fx-background-color: #E3F2FD; -fx-padding: 14;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/24.0.1"
            fx:controller="com.sysone.ogamza.controller.user.WriteMessageController">

    <VBox spacing="12.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- 상단 타이틀 -->
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0D47A1;" text="✉ 쪽지 보내기" />

        <!-- 부서 선택 -->
        <HBox spacing="10">
            <Label style="-fx-font-weight: bold;" text="부서 선택:" />
            <ComboBox fx:id="deptComboBox" prefWidth="250" />
        </HBox>

        <!-- 수신인 선택 -->
        <HBox spacing="10">
            <Label style="-fx-font-weight: bold;" text="수신인:" />
            <ComboBox fx:id="receiverComboBox" prefWidth="250" promptText="부서를 먼저 선택해주세요" />
        </HBox>

        <!-- 내용 -->
        <Label style="-fx-font-weight: bold;" text="내용:" />
        <TextArea fx:id="contentArea" prefRowCount="8"
                  wrapText="true"
                  promptText="쪽지 내용을 입력해주세요"
                  style="-fx-control-inner-background: #ffffff;" />

        <!-- 버튼 영역 -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button fx:id="sendButton"
                    text="보내기"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"
                     />
            <Button fx:id="cancelButton"
                    text="취소"
                    style="-fx-background-color: #E0E0E0; -fx-text-fill: black; -fx-font-weight: bold;"
                     onAction="#handleClose"/>
        </HBox>

    </VBox>
</AnchorPane>
